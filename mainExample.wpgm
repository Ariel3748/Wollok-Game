import wollok.game.*

import MainGame.*
import PantallaCarga.*
import mainMenu.*


program PepitaGame {
	const musica = game.sound("musica.mp3")
	
	game.title("Pepita")
	game.height(10)
	game.width(10)
	game.cellSize(150)
	menuPrincipal.mainMenu()
	musica.shouldLoop(true)
	keyboard.s().onPressDo({musica.volume(1)})
  	keyboard.b().onPressDo({musica.volume(0)})
  	keyboard.m().onPressDo({musica.volume(0.5)})
	game.schedule(1, {musica.play()})
	game.start()
}
